<div class="banner-title-toupie">
  <h1>Nos Sites</h1>
</div>

<div class="calin-container my-3 d-flex flex-column align-items-center justify-content-center">
  <h4>Filtrer par :</h4>
  <div class="d-flex my-3">
    <%= link_to sites_path(query: "entites") do %>
      <div class="d-flex filter-button">
        <%= image_tag 'marker-blue.png', width: '20px', height: '30px' %>
        <p class='pl-2' style='margin: 0'>Siège, succursale et filiales</p>
      </div>
    <% end %>
    <%= link_to sites_path(query: "beton") do %>
      <div class="d-flex filter-button">
        <%= image_tag 'marker-red.png', width: '20px', height: '30px' %>
        <p class='pl-2' style='margin: 0'>Centrales à Béton</p>
      </div>
    <% end %>
    <%= link_to sites_path(query: "carrieres calcaires") do %>
      <div class="d-flex filter-button">
        <%= image_tag 'marker-green.png', width: '20px', height: '30px' %>
        <p class='pl-2' style='margin: 0'>Carrières roches calcaires</p>
      </div>
    <% end %>
    <%= link_to sites_path(query: "sablieres") do %>
      <div class="d-flex filter-button">
        <%= image_tag 'marker-green.png', width: '20px', height: '30px' %>
        <p class='pl-2' style='margin: 0'>Carrières sables et graviers</p>
      </div>
    <% end %>
  </div>
  <div id="map"
      style="width: 90%; height: 500px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
