<div id="carouselExampleControls<%= number %>" class="carousel slide" style="width: 100%" data-ride="carousel">
  <div class="carousel-inner">
    <% images.each_with_index do |image, index| %>
      <div class="carousel-item <%= "active" if index == 0 %>">
        <div class="d-flex flex-column align-items-center justify-content-center">
          <%= image_tag "#{path}/#{image.split('/').last}", class: 'carousel-image' %>
          <p class="w-100 text-center text-light-gray"><%= image.split('/').last.scan(/(\d+\W)(.+?)(\.[^.]*$|$)/).first[1] %></p>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls<%= number %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls<%= number %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
