<div id="carouselExampleControls<%= number %>" class="carousel slide <%= "w-50" if mid_width %>" data-ride="carousel">
  <div class="carousel-inner">
    <% images.each_with_index do |image, index| %>
      <div class="carousel-item <%= "active" if index == 0 %>">
        <%= image_tag "#{path}/#{image.split('/').last}", style: "max-width: 100%; max-height: 400px;" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls<%= number %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls<%= number %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
